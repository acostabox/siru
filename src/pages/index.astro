import Header from "../components/header/Header.astro";
import "../style/index.css";
import Main from "../components/main/main.astro";
import Footer from "../components/footer/Footer.astro";
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Rubén Siru Acosta, originario de Mar del Plata,
               es un boxeador argentino con una carrera que abarca más de dos décadas.
              Debutó profesionalmente el 12 de abril de 2002, a los 23 años,
            y desde entonces ha acumulado un récord de 40 victorias (14 por nocaut), 18 derrotas y 5 empates."
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://siru.acostabox.com/" />
    <meta property="og:site_name" content="Siru Acosta" />
    <meta property="og:title" content="Siru Acosta Boxeador" />
    <meta
      property="og:image"
      content="https://siru.acostabox.com/img/preview-page.webp"
    />

    <script
      src="https://kit.fontawesome.com/2898a0ac51.js"
      crossorigin="anonymous"></script>
    <title>Portafolio | Ruben Siru Acosta</title>
